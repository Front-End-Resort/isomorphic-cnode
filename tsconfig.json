{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false,
    "target": "es5",
    "noEmit": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": false,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react",
    "lib": ["esnext", "dom.iterable", "dom"],
    "types": ["node"],
  },
  "exclude": [
    "publish"
  ]
}
